<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>
<div class="container mt-5">
<form action="/search" method="post">
    <div class="input-group mb-3">
        <input type="text" class="mt-0 form-control" name="name" placeholder="Stationery" aria-label="Username"
            aria-describedby="basic-addon1">
        <input class="btn btn-dark" value="Search" type="submit">
    </div>
</form>
</div>
<% if(items && items.length > 0){ %>
<div class="container box-stationary">
    <div class="row">

        <% items.forEach(function(item) { %>
        <div class="col-xs-6 col-md-4 stationeries mb-4 card p-3">

            <div class="pictureItem">
                <img id="itemPicture" src="<%=item.picture%>">
            </div>
            <div class="details">
                <h4 class name="name" id="name">
                    <%=item.name%>
                </h4>
                <!-- <p><strong>Quantity:</strong>
                    <%=item.quantity%>
                </p> -->
                <h5><strong>ID:</strong>
                    <%=item.stationary_id%>
                </h5>
                <h5><strong>Availability:</strong>
                  <%=item.availability%>
                </h5>
            </div>

        </div>




        <%	}); %>



    </div>
</div>

<% } else { %>
    <div class="container mt-5">
        <h1 class="text-center">
            Empty
        </h1>

    </div>



<% } %>
<% include ../partials/footer %>
